{
  "manifest_version": 2,
  "name": "Weather Extension",
  "description": "Weather Extension",
  "version": "1.1",
  "permissions": [ "http://api.openweathermap.org/", "geolocation"],
  "browser_action": {
    "default_icon": "image/wext_logo.png",
	"default_popup": "ext_popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": { 
	"page": "ext_background.html"
  }
}